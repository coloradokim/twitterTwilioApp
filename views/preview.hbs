{{#emergencyTweet}}
  <article>
    <h3>Message: {{message}}</h3>
    <h3>Phone Number: {{phoneNumber}}</h3>

    <form action="/preview" method="POST">
      <input type="submit" name="send" value="Send Emergency Tweet"><a href="/users/confirmation/?phoneNumber={{phoneNumber}}&message={{message}}"></a>
    </form>
    
  </article>
  {{/emergencyTweet}}
